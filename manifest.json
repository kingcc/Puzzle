{
  "name": "Puzzle",
  "version": "1.0",
  "description": "A Chrome elegant translate extension.",
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "content_scripts": [{
    "matches": ["*://*/*"],
    "css": ["css/flag.css"],
    "js": ["js/jquery.min.js", "js/flag.js"]
  }],
  "browser_action": {
    "default_icon": {
      "19": "img/icon.png",
      "38": "img/icon.png"
    },
    "default_title": "Puzzle",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "manifest_version": 2
}
